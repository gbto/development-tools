{
    "name": "debian-workspace",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "PYTHON_VERSION": "3.10", // TODO: look how to access args in Dockerfile
        }
    },
    "runArgs": [
        "--name=debian-workspace"
    ],
    "containerEnv": {
        "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}",
        "GITHUB_USER": "${localEnv:GITHUB_USER}"
    },
    "postStartCommand": "bash scripts/install-dev-tools.sh",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/gibboneto/Programming/,type=bind,consistency=cached",
    "workspaceFolder": "/home/gibboneto/Programming/",
    "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
            "zsh": {
                "path": "/bin/zsh"
            },
        },
        "editor.tabSize": 4
    },
    "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-python.vscode-pylance",
        "ms-python.python",
        "mhutchie.git-graph",
        "eamodio.gitlens",
        "donjayamanne.githistory",
        "JHeilingbrunner.vscode-gnupg-tool",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "njpwerner.autodocstring",
        "IronGeek.vscode-env",
        "VisualStudioExptTeam.vscodeintellicode",
        "redhat.vscode-yaml"
    ]
}
