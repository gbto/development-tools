// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.195.0/containers/go
{
    "name": "Go-container",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
        }
    },
    "containerEnv": {
        "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}",
        "GITHUB_USER": "${localEnv:GITHUB_USER}"
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/gibboneto/Programming/,type=bind,consistency=cached",
    "workspaceFolder": "/home/gibboneto/Programming/",
    "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
            "zsh": {
                "path": "/bin/zsh"
            },
        },
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": false,
        "go.gopath": "/usr/bin/go",
        // "go.goroot": "/usr/bin/go"
    },

    // Add the IDs of extensions you want installed when the container is created.
    "extensions": [
        "golang.Go",
        "ms-azuretools.vscode-docker",
        "mhutchie.git-graph",
        "eamodio.gitlens",
        "donjayamanne.githistory",
        "JHeilingbrunner.vscode-gnupg-tool",
        "msyrus.go-doc",
        "766b.go-outliner",

    ],
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    // "forwardPorts": [9000],
    // Use 'portsAttributes' to set default properties for specific forwarded ports. More info: https://code.visualstudio.com/docs/remote/devcontainerjson-reference.
    "portsAttributes": {
        "9000": {
            "label": "Hello Remote World",
            "onAutoForward": "notify",

        }
    },
    // Use 'otherPortsAttributes' to configure any ports that aren't configured using 'portsAttributes'.
    // "otherPortsAttributes": {
    // 		"onAutoForward": "silent"
    // },
    // Use 'postCreateCommand' to run commands after the container is created.
    // "postCreateCommand": "go version",
    // Uncomment to connect as a non-root user. More info: https://aka.ms/vscode-remote/containers/non-root.
    "remoteUser": "gibboneto"
}
